<!-- barre navigation -->
<header>
    <div class="container-fluid shadow bg-white rounded navigationbar">
        <div class="row">
            <div class="col d-flex align-items-center">
                <% if(locals.user) {%>
                <a class="navbar-brand" href="/evenements">
                        <img src="/logo.png" height="50" alt="" loading="lazy">
                </a>
                <%} else {%>
                    <a class="navbar-brand" href="/login">
                        <img src="/logo.png" height="50" alt="" loading="lazy">
                </a>
                <% } %>
            </div>
            <div class="col">
                <div class="row">
                    <div class="d-xl-block col-xl-1"></div>
                    <div class="d-md-block col-md-4 col-lg-6 col-xl-6"></div>
                    <% if (locals.user) {%>
                        <% if (typeof user.adminPseudo != "undefined") {%>
                        <div class="col my-3 d-flex justify-content-end flex-nowrap">
                            <p>Administrateur</p>
                        </div>
                        <% } else{ %>
                        <!-- afficher le nom de l'utilisateur ou "Admin" lorsqu'on est connecté -->
                        <div class="col my-3 d-flex justify-content-end flex-nowrap">
                            <p><%- user.studentLastName %> <%- user.studentFirstName %></p>
                        </div>
                        <%}%>
                        <!-- afficher lorsqu'on est connecté -->
                        <div class="col my-3">
                            <a id="connectbuttonhref" href="/logout">Déconnexion</a>
                        </div>
                    <% } else{ %>
                    <div class="col my-3">
                        <a id="connectbuttonhref" href="/login">Se connecter</a>
                    </div>
                    <div class="col my-3">
                        <a id="connectbuttonhref" href="/loginAdmin">Se connecter en tant qu'administrateur</a>
                    </div>
                    <%}%>
                </div>
            </div>
        </div>
    </div>
</header>