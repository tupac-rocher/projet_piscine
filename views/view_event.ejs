<script>
    function ExportPdf(){ 
kendo.drawing
   .drawDOM("#calendar", 
   { 
       paperSize: "A4",
       margin: { top: "2", bottom: "2cm" },
       scale: 0.25,
       height: 500,
       landscape: true

   })
