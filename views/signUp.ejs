<%- include('./partials/header') %>
<title>Vue Evénements</title>
<link rel="stylesheet" href="login_style.css">
</head>
<body>
<%- include ('./partials/nav') %>

    <div class="container">
        <p class=" align-middle h1 text-center my-5" id="title">OUTIL DE RESERVATION DE SOUTENANCE</p>
    </div>

    <div class="container login-container ">
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-sm-12 col-md-8 login-form-1 bg-light shadow p-3 mb-5 bg-white rounded">
                <h3>Inscription</h3>
                <!-- formulaire -->
                <form action="/signUp" method="POST">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Nom" value="" name="studentLastName" required/>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Prénom" value="" name="studentFirstName" required/>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Promo" value="" name="schoolYear" required/>
                    </div>
                    <div class="form-group">
                        <input type="email" class="form-control" placeholder="Email" value="" name="studentMail" required/>
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" placeholder="Mot de Passe" value="" name="studentPassword" required/>
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" placeholder="Confirmer le mot de passe" value="" required/>
                    </div>
                    <div class="form-group" id="buttona">
                        <input type="submit" class="btnSubmit" value="S'inscrire" />
                    </div>
                </form>
            </div>
            <div class="col-md-2"></div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js" integrity="sha384-w1Q4orYjBQndcko6MimVbzY0tgp4pWB4lZ7lr30WKz0vr/aWKhXdBNmNb5D92v7s" crossorigin="anonymous"></script>
</body>
</html>